<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <ImageView
        android:id="@+id/ivContactImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_centerVertical="true"
        android:maxHeight="70dp"
        android:minHeight="70dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tvContactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ivContactImage"
        android:layout_toEndOf="@id/ivContactImage"
        android:textStyle="bold"
        android:hint="Emily Zhao"
        android:textSize="12sp"
        android:textColor="#ff2886ff" />

    <TextView
        android:id="@+id/tvEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvContactName"
        android:layout_alignStart="@id/tvContactName"
        android:hint="emtropy@gmail.com"
        android:textSize="12sp"
        android:textColor="#ff8fc9d2" />



</RelativeLayout>
